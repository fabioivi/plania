# Build stage
FROM node:20-alpine AS builder

WORKDIR /app

# Copiar package files
COPY package*.json ./

# Instalar dependências (usar npm install ao invés de npm ci)
RUN npm install

# Copiar código fonte
COPY . .

# Build da aplicação (comentado para dev mode)
# RUN npm run build

# Development stage
FROM node:20-alpine

WORKDIR /app

# Copiar package files
COPY package*.json ./

# Instalar dependências (usar npm install ao invés de npm ci)
RUN npm install

# Copiar código fonte
COPY . .

# Expor porta
EXPOSE 3000

# Comando padrão (será sobrescrito pelo docker-compose)
CMD ["npm", "run", "dev"]
