# ==========
# APP CONFIG
# ==========
NODE_ENV=production
PORT=3001

# ==========
# SECURITY (Generate new keys!)
# ==========
# 32 chars random string
ENCRYPTION_KEY=CHANGE_32_CHARS_PRODUCTION_KEY!!
# JWT Secret
JWT_SECRET=super_secret_jwt_key_change_me

# ==========
# DATABASE (Postgres)
# ==========
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_for_db
POSTGRES_DB=plania
# Same as above for TypeORM
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=secure_password_for_db
DATABASE_NAME=plania

# ==========
# REDIS
# ==========
REDIS_PORT=6379

# ==========
# PUBLIC URLs
# ==========
# The URL where your frontend will be accessed (e.g. https://plania.seudominio.com)
FRONTEND_URL=https://plania.fabiodev.com.br
# The URL where your backend API is accessible
NEXT_PUBLIC_API_URL=/api

# ==========
# EXTERNAL SERVICES
# ==========
IFMS_BASE_URL=https://academico.ifms.edu.br

# ==========
# DATABASE OPERATIONS
# ==========
# Set to 'true' only on first run to create tables, then set to 'false'
DB_SYNCHRONIZE=true
# Keep false to reduce logs
DB_LOGGING=false

# ==========
# MONITORING (Sentry)
# ==========
# Backend DSN (Node.js)
SENTRY_DSN=
# Frontend DSN (Next.js)
NEXT_PUBLIC_SENTRY_DSN=

# ==========
# ADMIN
# ==========
ADMIN_EMAIL=admin@plania.com
ADMIN_PASSWORD=admin
